// finding the Middle element of a Stack 
#include <iostream>
#include <stack>
using namespace std;

void findMiddle(stack<int>& s, int & totalSize){
    // if stack is empty 
    if(s.size() == 0) {
        cout<<"there is no element in the stack !"<<endl;
        return;
    }
    
    // Base case
    if(totalSize/2 +1 == s.size()) {
        cout<<"Middle element of a stack is "<<s.top()<<endl;
        return;
    }
    
    int temp = s.top(); // store the top element
    s.pop();
    
    // Recursive call
    findMiddle(s, totalSize);
    
    // Backtracking 
    s.push(temp);
}
int main() {
    stack<int>s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);
    s.push(50);
    s.push(60);
    s.push(70);
    
    int totalSize = s.size();
    findMiddle(s, totalSize);
    return 0;
}

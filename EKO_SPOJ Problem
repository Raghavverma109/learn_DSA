
#include <iostream>
#include<vector>
#include<algorithm>
using namespace std;

bool isPossibleSolution(vector<long long int>trees, long long k,long long int n, long long int mid){
    int woodCollect = 0;
    for(long long int i =0;i<n;i++){
        int leftWood = trees[i]-mid;
        if(leftWood >=0) woodCollect += leftWood;
    }
     return woodCollect >=k;
}

int EKO_SPOJ(vector<long long int>& trees,long long int n , long long int k){
    int ans = -1;
    long long int s = 0 , e = *max_element(trees.begin(), trees.end());
    while(s<=e){
        long long int mid = s + (e-s)/2;
        if(isPossibleSolution(trees, k, n, mid)){
            ans = mid;
            s = mid+1;
        }
        else e = mid-1;
    }
    return ans;
}

int main() {
    long long int n, k;
    cin>>n>>k;
    vector<long long int>trees;
    for(long long int i=0;i<n;i++){
        cin>>trees[i];
    }
    return EKO_SPOJ(trees,n,k);

    return 0;
}
